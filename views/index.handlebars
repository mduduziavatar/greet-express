<div class="main-body">
    <h2>Greetings Language Converter App (GLCA)</h2>
    <form action="/greet" method="POST">
        <input type="text" name="textItem" class="inputElements" placeholder="Enter your name here"
            value="{{textBoxValue.textItem}}">
        <div class="counter">
            <h1>{{counter}}</h1>
        </div>
        <label>
            <input type="radio" name="selector" value="english">English
        </label>
        <label>
            <input type="radio" name="selector" value="sesotho">Sesotho
        </label>
        <label>
            <input type="radio" name="selector" value="zulu">Zulu
        </label>
</div>
<button class="greetButton" type="submit" name="button">greet</button>
<div class="errors">
    <h3>
        {{messages.errors}}
    </h3>
</div>
<div class="txtBox">
    <h1 id="txtBox">
        <p>{{txtBox}}</p>
    </h1>
</div>
<button class="resetButton" id="reset" name="button"> <a href="/reset">reset</a></button>
</form>
<div class="six columns">
    <td class="{{greetedUsers}}"><span class="totalSettings">{{greetedUsers}}</span> </td>
</div>
<form class="main" action="/data" method="get">
    <button id="greetedButton" class="greetedBtn">Show Greeted</button>
</form>